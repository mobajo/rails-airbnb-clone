<h1>Spaceships#index</h1>
<p>Find me in app/views/spaceships/index.html.erb</p>

<h1>My Spaceships</h1>
<ul>
	<% @spaceships.each do |spaceship| %>
	<li><%= link_to spaceship.name, spaceship_path(spaceship) %> |
		<%= link_to "Edit Spaceship", edit_spaceship_path(spaceship) %> |
	<%= link_to spaceship_path(spaceship), method: :delete do %>
		<i class="fa fa-trash-o" aria-hidden="true"></i>
	</li>
		<% end %>
	<% end %>
</ul>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <script>
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
      markers = handler.addMarkers(<%= raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
    });
  </script>
<% end %>

