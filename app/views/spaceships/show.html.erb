<div class="container">
  <h1><%= @spaceship.name %></h1>

  <div class="row">
    <div class="col-xs-4">
      <h4>Info</h4>
      <p><strong>Address:</strong> <%= @spaceship.address %></p>
      <p><strong>Description:</strong></p>
      <p><strong>Speed:</strong> <%= @spaceship.speed %></p>
      <p><strong>Weaponry: </strong><%= @spaceship.weaponry %></p>
      <h4>Description</h4>
      <p><%= @spaceship.description %></p>
      <p><strong>Price:</strong> <%= @spaceship.price %> $</p>

      <div>
        <h4>Owner:</h4> 
        <%= @spaceship.user.first_name %> <%= @spaceship.user.last_name %></p>

      </div>
      
    </div>
    <div class="col-xs-4">
      <% @spaceship.photos.each do |photo| %>
      <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
      <% end %>
    </div>
    <div class="col-xs-4">
      <h4>Booking</h4>
      <%= simple_form_for [@spaceship, @booking] do |f| %>
      <%= f.input :start_date , input_html: { value: `<%= Date.today %\>` } %> 
      <%= f.input :end_date, input_html: { value: `<%= Date.today + 5 %\>` } %>
      <%= f.submit "Request booking", class: "btn btn-info" %>
      <% end %>
      <p><%= @booking.errors.full_messages.first if @booking.errors.any? %></p>
    </div>
  </div>

</div>
